<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <CheckBox
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/checkBox"
        android:checked="false"
        android:buttonTint="@color/main"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/missionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkBox"
        android:paddingLeft="10dp"
        android:textSize="22sp"
        android:textColor="#000C5D" />

    <TextView
        android:id="@+id/missionDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This is Description"
        app:layout_constraintTop_toBottomOf="@+id/missionTitle"
        app:layout_constraintLeft_toRightOf="@id/checkBox"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColor="#ADADAD" />
    <TextView
        android:id="@+id/missionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="22dp"
        android:textSize="18sp"
        android:textColor="#ADADAD" />
    <ImageButton
        android:id="@+id/editBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/margin_top_normal"
        android:backgroundTint="#fff"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintRight_toLeftOf="@id/btnDelete"
        app:layout_constraintTop_toBottomOf="@+id/missionDate" />
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/margin_top_normal"
        android:backgroundTint="#fff"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missionDate" />

</androidx.constraintlayout.widget.ConstraintLayout>
